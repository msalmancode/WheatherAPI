<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_display"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.internee1.wheatherapi.Display">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_display">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"

                    >

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        app:srcCompat="@drawable/humidity"
                        android:id="@+id/ivHumidity"
                        android:layout_marginLeft="15dp"
                        />

                    <TextView
                        android:id="@+id/tvHumidityName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Humidity"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:textSize="15dp"
                        android:layout_weight="1"
                        />

                    <TextView
                        android:id="@+id/tvHumidityData"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Dispay Here!"
                        android:gravity="right"
                        android:layout_marginRight="30dp"
                        android:textSize="20dp"
                        android:layout_weight="1"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    >
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        app:srcCompat="@drawable/windspeed"
                        android:id="@+id/ivWindSpeed"
                        android:layout_marginLeft="15dp"
                        />
                    <TextView
                        android:id="@+id/tvWindSpeedName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Wind Speed"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:textSize="15dp"
                        android:layout_weight="1"
                        />

                    <TextView
                        android:id="@+id/tvWindSpeedData"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Dispay Here!"
                        android:gravity="right"
                        android:layout_marginRight="30dp"
                        android:textSize="20dp"
                        android:layout_weight="1"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>



            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    >
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        app:srcCompat="@drawable/min_temp"
                        android:id="@+id/ivMaxTemp"
                        android:layout_marginLeft="15dp"
                        />
                    <TextView
                        android:id="@+id/tvMaxtempName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Max Temperature"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:textSize="15dp"
                        android:layout_weight="1"
                        />

                    <TextView
                        android:id="@+id/tvMaxtempData"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Dispay Here!"
                        android:gravity="right"
                        android:layout_marginRight="30dp"
                        android:textSize="20dp"
                        android:layout_weight="1"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    >
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        app:srcCompat="@drawable/max_temp"
                        android:id="@+id/ivMinTemp"
                        android:layout_marginLeft="15dp"
                        />
                    <TextView
                        android:id="@+id/tvMintempName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Min Temperature"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:textSize="15dp"
                        android:layout_weight="1"
                        />

                    <TextView
                        android:id="@+id/tvMintempData"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Dispay Here!"
                        android:gravity="right"
                        android:layout_marginRight="30dp"
                        android:textSize="20dp"
                        android:layout_weight="1"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    >
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        app:srcCompat="@drawable/pressure"
                        android:id="@+id/ivPressure"
                        android:layout_marginLeft="15dp"
                        />
                    <TextView
                        android:id="@+id/tvPressureName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Pressure"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:textSize="15dp"
                        android:layout_weight="1"
                        />

                    <TextView
                        android:id="@+id/tvPressureData"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Dispay Here!"
                        android:gravity="right"
                        android:layout_marginRight="30dp"
                        android:textSize="20dp"
                        android:layout_weight="1"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>




    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg"
        android:id="@+id/top_display"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="50dp"

            >



            <TextView
                android:id="@+id/day_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="@color/colorTemp"
                android:layout_marginTop="15dp"
                android:text="Monday"
                android:textSize="30sp"
                android:layout_below="@+id/cityStatus"
                />

            <TextView
                android:id="@+id/city_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_below="@+id/day_name"
                android:textColor="@color/colorTemp"
                android:text="Karachi,pk"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/current_temperature_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cityStatus"
                android:textColor="@color/colorTemp"
                android:text="17"
                android:textSize="70sp"
                android:layout_alignParentRight="true"
                />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/ivIcons"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:id="@+id/cityStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_below="@id/ivIcons"
                android:textColor="@color/colorfont"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_centerHorizontal="true"
                android:text="Status"
                android:textSize="70sp"/>


        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
